<section class="hero-section">
  <div class="hero-section__main container col-xxl-8 px-4 pb-5 pt-9">
    <div class="row flex-lg-row-reverse align-items-center g-10 p-3">
      <div class="hero-section__content-r col-10 col-sm-8 col-lg-6 bg-white rounded p-3">
        <div
          class="hero-section__main--title d-flex flex-row justify-content-between align-items-center pb-3"
        >
          <p class="m-0">Manage cards</p>
          <button class="btn btn-outline-secondary">Add new</button>
        </div>

        {{> hero/card}}

        <div class="summary pt-4 border-bottom">
          <div
            class="d-flex flex-row justify-content-between align-items-baseline"
          >
            <p class="m-0 font-weight-bold">Starbucks</p>
            <p class="m-0 font-weight-bold">$5,50 USD</p>
          </div>
          <p class="text-muted">Pending - San Francisco, United States</p>
        </div>
        <div class="summary pt-4 border-bottom mb-4">
          <div
            class="d-flex flex-row justify-content-between align-items-baseline"
          >
            <p class="m-0 font-weight-bold">Nike Sports</p>
            <p class="m-0 font-weight-bold">$129,00 USD</p>
          </div>
          <p class="text-muted">Pending - Lisbon, Portugal</p>
        </div>

        <a href="">View all </a>
      </div>
      <div class="hero-section__content-l col-lg-6 d-flex flex-column">
        {{#with hero}}
        <h1 class="display-5 fw-bold lh-1 mb-3 text-white w-75">
          {{this.title}}
        </h1>
        <p class="lead text-white ">
          {{this.subtitle}}
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a type="button" href="{{this.cta.url}}" class="btn btn-light btn-lg px-4 me-md-2">{{this.cta.text}}</a>
        </div>
        {{/with}}

        <div class="d-flex flex-row">
          <p class="text-white py-4 pr-4 m-0">Trusted by:</p>
          
          <img
            class="mx-2"
            width="70px"
            height="auto"
            src="{{webRoot}}/assets/images/hero_icons-google-white.svg"
            alt="airbnb"
          />
          <img
            class="mx-2"
            width="70px"
            height="auto"
            src="{{webRoot}}/assets/images/hero_icons-spotify-white.svg"
            alt="airbnb"
          />
          <img
            class="mx-2"
            width="70px"
            height="auto"
            src="{{webRoot}}/assets/images/hero_icons-airbnb-white.svg"
            alt="airbnb"
          />
          <img
            class="mx-2"
            width="70px"
            height="auto"
            src="{{webRoot}}/assets/images/hero_icons-paypal-white.svg"
            alt="airbnb"
          />
        </div>
      </div>
    </div>
  </div>
</section>