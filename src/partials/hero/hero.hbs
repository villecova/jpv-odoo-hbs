<section class="hero-section">
  <div class="hero-section__main container col-xxl-8 px-4 pb-5 pt-9">
    <div class="row flex-lg-row-reverse align-items-center g-10 p-3  justify-content-center">

      <!-- hero second col -->
      <div class="hero-section__second-col col-10 col-sm-8 col-lg-6 bg-white rounded p-4">
        <div
          class="hero-section__main--title d-flex flex-row justify-content-between align-items-center pb-3"
        >
        {{#with hero.second_col}}
          <p class="m-0">{{this.title}}</p>
          <button class="btn btn-outline-secondary">{{this.cta.text}}</button>
        {{/with}}
        </div>

        <!-- card -->
        {{> hero/card}}

        <!-- purchases -->
        <div class="hero-section__purchases mb-4">
          {{#each hero.second_col.purchases}}
          <div class="summary pt-4 border-bottom">
            <div
              class="d-flex flex-row justify-content-between align-items-baseline"
            >
              <p class="m-0 font-weight-bold">{{this.store}}</p>
              <p class="m-0 font-weight-bold">{{this.price}}</p>
            </div>
            <p class="hero-section__purchases--status text-muted">{{this.status}}</p>
          </div>
          {{/each}}
        </div>

        <a class="view-all" href="">View all</a>
      </div>

      <!-- hero first col -->
      {{#with hero.fist_col}}
      <div class="hero-section__first-col col-lg-6 d-flex flex-column">
        <h1 class="display-5 fw-bold lh-1 mb-3 text-white w-75">
          {{this.title}}
        </h1>
        <p class="lead text-white ">
          {{this.subtitle}}
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a type="button" href="{{this.cta.url}}" class="btn btn-light btn-lg px-4 me-md-2">{{this.cta.text}}</a>
        </div>
        

        {{#with trusted}}
        <div class="d-flex flex-row">
          <p class="text-white mb-0 py-3 trusted">{{this.text}}</p>
          
          {{#each img}}
          <img
            class="mx-2"
            width="70px"
            height="auto"
            src="{{webRoot}}{{this.url}}"
            alt="{{this.alt}}"
          />
          {{/each}}
          
        </div>
        {{/with}}
      </div>
      {{/with}}
    </div>
  </div>
</section>