<section class="tools-section p-4 pt-9 d-flex align-items-center mb-1">
    
  <div class="container col-10 my-md-3 ps-md-3">
    <div class="row">

        {{#with tools}}
        <div class="container col-lg-6 figure">
            <div class="flip-card rounded">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img class="card-img rounded info-image" src="{{webRoot}}{{this.img.url}}" alt="{{this.img.alt}}">
                </div>
                <div class="flip-card-back rounded">
                    <div class="container">
                        <h3 class="mb-3 flip-card-back__title">{{this.projects.title}}</h3>
                        {{#each projects.items}}
                        <div>
                            <div class="d-flex flex-row justify-content-between">
                                <p class="flip-card-back__text">{{this.title}}</p>
                                <p class="text-muted flip-card-back__time">{{this.time}}</p>
                            </div>
                            <div class="progress mb-4 flip-card-back__bar">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    
                </div>
            </div>
            </div>
        </div>

         <div class="bg-light col-sm-8 col-lg-6 d-flex flex-column justify-content-center">
            <div class="my-3 info-container d-flex flex-column">
                <p class="bg-warning text-white section-tag">{{section_tag}}</p>
                <h2 class="m-0">{{this.title}}</h2>
                <p class="text-muted mb-sm-4">{{this.description}}</p>
                <a class="text-primary" href="">{{this.cta.text}}</a>
            </div>
        </div>
        {{/with}}


    </div>
  </div>
</section>